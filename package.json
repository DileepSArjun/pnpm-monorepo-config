  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=9.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "packageManager": "pnpm@9.0.1",
  "dependencies": {
    "@vue/eslint-config-prettier": "^9.0.0",
    "prettier": "^3.2.5"
  }
